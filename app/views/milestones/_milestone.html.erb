<div id="<%= dom_id(milestone) %>">
  <div class="flex flex-col h-20 p-3 border border-black/50 rounded-md bg-slate-300 overflow-hidden transition duration-500 hover:shadow-2xl hover:bg-white">
    <%= link_to milestone_path(milestone), data: { turbo: false }, class: "w-full max-w-[82%]" do %>
      <div class="flex items-end justify-between mt-1 ml-1">
        <div>
          <div class="text-xs"><%= milestone.user.name %></div>
          <div class="pt-1 text-lg line-clamp-1"><%= milestone.title %></div>
        </div>
        <% if current_user&.mine?(milestone) %>
        <div class="flex space-x-1">

          <%= link_to edit_milestone_path(milestone), title: "編集" do %>
            <i class="ri-edit-box-line text-xl text-blue-500 outline-none"></i>
          <% end %>

          <button onclick="showModal()" class="outline-none hover:animate-quake">
            <i class="ri-delete-bin-5-line text-xl text-red-400"></i>
          </button>
          <dialog id="modal" class="rounded-lg p-8 bg-white shadow-lg w-96">

            <p class="text-center text-lg font-medium">投稿を削除しますか？</p>
            <div class="flex justify-between ml-10 mr-14 mt-4">

              <button onclick="closeModal()" class="btn btn-outline outline-none font-thin text-xs md:text-base">キャンセル</button>

              <%= link_to "削除", milestone_path(milestone), class: "btn btn-outline font-thin text-xs text-red-400 md:text-base", data: { turbo_method: :delete } %>
            </div>

          </dialog>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
